@model IEnumerable<MiniBlog.Models.Post>

<h1>Список постов</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<a asp-action="Create" class="btn btn-primary mb-3">Создать новый пост</a>

<table class="table">
    <thead>
        <tr>
            <th>Заголовок</th>
            <th>Дата публикации</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@post.Id">@post.Title</a>
                </td>
                <td>@post.DatePosted.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-danger btn-sm">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
